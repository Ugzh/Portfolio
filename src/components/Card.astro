---
import Tag from './Tag.astro';

interface Props {
	title: string;
	description: string;
	href: string;
	src: string;
	alt: string;
	techno: string;
}

const { href, title, description, techno, src, alt } = Astro.props;
---

<div class="w-full border border-slate-400 rounded-3xl p-6 flex ">
	<a href=`${href}` class="flex gap-10 flex-col lg:flex-row md:h-96 h-full lg:h-full" target="_blank">
		<img src=`${src}` alt=`${alt}` class="lg:max-w-80 lg:max-h-80 w-full h-1/3 rounded-2xl">
	<div class="space-y-10">
		<div class="space-y-2">
			<h4 class="text-2xl underline">{title}</h4>
			<p>{description}</p>
		</div>
		<div class="flex w-full flex-col gap-4"> 
			<h4 class="underline-offset-3 underline text-lg">Technologies</h4>
			<div class="flex gap-2">
				<Tag techno={techno}></Tag>
			<slot />
			</div>
		</div>
	</div>
	</a>
</div>